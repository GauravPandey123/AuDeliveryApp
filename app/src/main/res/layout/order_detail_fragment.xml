<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/reativeLayoutBack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80dp"
        android:background="@color/colorAccent"

        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewOrderBack"
            android:layout_width="@dimen/_24dp"
            android:layout_height="@dimen/_32sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:src="@drawable/ic_order_detail_back" />

        <TextView
            android:id="@+id/textViewOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/_20dp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_toEndOf="@+id/imageViewOrderBack"
            android:layout_toRightOf="@+id/imageViewOrderBack"
            android:text="@string/pickup"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/font_20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textColor="@color/white"
            android:textSize="@dimen/font_sixteen"
            android:layout_toEndOf="@+id/imageViewOrderBack"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_below="@+id/textViewOrderId"
            android:layout_toRightOf="@+id/imageViewOrderBack"
            android:layout_marginStart="@dimen/_12sdp" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>